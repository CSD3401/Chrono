#type vertex
#version 460 core

layout(location = 0) in vec3 aPos;

uniform mat4 u_LightVP;
uniform mat4 u_Model;

void main()
{
    gl_Position = u_LightVP * u_Model * vec4(aPos, 1.0);
}

#type fragment
#version 460 core
#extension GL_ARB_bindless_texture : require

void main()
{
    // depth only, no color output
}
